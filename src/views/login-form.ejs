<html>
<head>
  <title>Welcome to my Website</title>
  <link rel="stylesheet" href="/css/login.css">
  <link rel="stylesheet" href="/css/home.css">
</head>

<body>
  <header>
    <%- include('partials/header', { activePage: 'home' }) %>
  </header>

  <div class="separator" style="margin-top: 0px; margin-bottom: 0px;"></div>
  <!-- Other content -->
  <div class="container">

        <div class="main-content" style="display: flex; justify-content: center; align-items: center;">
          <div class="user-content">
            <th><h2 style="margin-left: 150px;">User   Login</h2></th>
            <form (submit)="login()" style="margin-left: 48px;margin-top: 50px;">
                <div style="display: flex; align-items: center;">
                  <thead>
                  
                  <label for="username">Username&nbsp;&nbsp;&nbsp;&nbsp;</label>
                  <input type="text" id="username" name="username" [(ngModel)]="username">
                </div>
                <p></p>
                <div style="display: flex; align-items: center;">
                  <label for="password">Password&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                  <input type="password" id="password" name="password" [(ngModel)]="password">
                </div>
                <p></p>
                <div style="display: flex; justify-content: center;">
                  <button type="submit" style="margin-left: 0px;">Login</button>
                  <button type="reset">Reset</button>
                </div>
              </form>
          </div>
        </div>
      </div>

  <footer> 
    <%- include('partials/footer', { activePage: 'home' }) %>    
  </footer>
</body>
</html>
